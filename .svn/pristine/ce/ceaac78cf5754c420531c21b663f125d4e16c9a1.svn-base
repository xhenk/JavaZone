this.getMousePosition = function(e) {
	console.log('Clicked ' + e.pageY);
	var scroll = sliderQ.house.getScrollable().getScroller().setFps(10).position.y;
	var y = e.pageY + scroll;
	y -= sliderQ.MAX;
	if (y > 1512)
		return;
	y /= 22;
	y = Math.ceil(y);
	y = 61 - y;
	sliderQ.okBtn.setText('Gjett ' + y + ' etasjer.');
	sliderQ.value = y;
	return true;
}

