	case 0: { // map

		var lat_d = Math.abs(mapQ.CORR_lat - mapQ.flat);
		var lng_d = Math.abs(mapQ.CORR_lng - mapQ.flng);
		var snitt = (mapQ.lat_d + mapQ.lng_d) / 2;
		if (snitt <= mapQ.THRESH)
			glob_points[0] = 3;
		else if (snitt <= 3 * mapQ.THRESH)
			glob_points[0] = 2;
		else if (snitt <= 10 * mapQ.THRESH)
			glob_points[0] = 1;
		else
