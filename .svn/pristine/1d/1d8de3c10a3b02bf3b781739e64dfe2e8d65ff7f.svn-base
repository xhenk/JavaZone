function createRegPath(name, email, phone, ans) {
	var retval = regPath;
	retval += 'name=' + name;
	retval += '&email=' + email;
	retval += '&phone=' + phone;
	var ans = '';

	for (var i = 0; i < answers.length; i++) {
		if (answers[i] != undefined)
			ans += answers[i] + ';';
	}
	retval += '&answers=' + ans;
	//console.log("http://localhost/" + retval);
	return retval;
}

