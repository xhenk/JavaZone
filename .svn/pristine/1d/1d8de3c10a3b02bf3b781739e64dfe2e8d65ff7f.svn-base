this.getMousePosition = function(e) {
	
	if (carousel.getActiveIndex() != sliderQ.questionID)
		return;
	if (firstClick) {
		firstClick = false;
		return;
	}
	var scroll = sliderQ.house.getScrollable().getScroller().setFps(10).position.y;
	var y = e.pageY + scroll;
	y -= sliderQ.MAX;
	if (y > 1512)
		return;
	y /= 22;
	y = Math.ceil(y);
	y = 61 - y;
	sliderQ.value = y;
	console.log('Kalles denne først?=');
	sliderQ.okBtn.setText('Gjett ' + sliderQ.value + ' etasjer.');
	answers[sliderQ.questionID] = sliderQ.value;

	return true;
}

