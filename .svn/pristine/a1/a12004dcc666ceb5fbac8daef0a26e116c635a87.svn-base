function Slider() {

	var questionID;
	this.value = 0;
	this.MAX = 170;

	this.createSlider = function() {

		this.okBtn = new Ext.Button({
			docked : 'bottom',
			text : '&#8594; Gjett 0 etasjer. &#8594;',
			id : 'house_ok',
